<?xml version="1.0"?>

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  
  <!-- For production environments we stop using the seperate AppSettings.config file, because this makes the automatic deployment on Azure easier -->
  
  <appSettings xdt:Transform="RemoveAttributes(configSource)">
    <add key="webpages:Version" value="2.0.0.0" xdt:Transform="Insert" />
    <add key="webpages:Enabled" value="false" xdt:Transform="Insert" />
    <add key="PreserveLoginUrl" value="true" xdt:Transform="Insert" />
    <add key="ClientValidationEnabled" value="true" xdt:Transform="Insert" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" xdt:Transform="Insert" />
  </appSettings>
  
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
  </system.web>
</configuration>