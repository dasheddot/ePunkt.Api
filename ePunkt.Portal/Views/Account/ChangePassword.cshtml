@model ePunkt.Portal.Models.Account.ChangePasswordViewModel
<div class="changePasswordPage">

    @Html.TranslatedValidationSummary().MakeAlertDanger()

    <h1>@Html.Loc("Title")</h1>

    <p>@Html.Loc("Description1")</p>

    <form method="POST" action="@Url.Action("ChangePassword", new { job = Model.JobId })" role="form">
        @Html.AntiForgeryToken()


        <div class="form-group">
            @Html.LabelFor(x => x.OldPassword, @Html.Loc("OldPassword").ToString(), new { @class = "control-label" })
            @Html.PasswordFor(x => x.OldPassword, new { required = "required", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.NewPassword, @Html.Loc("NewPassword").ToString(), new { @class = "control-label" })
            @Html.PasswordFor(x => x.NewPassword, new { required = "required", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.NewPassword2, @Html.Loc("RepeatPassword").ToString(), new { @class = "control-label" })
            @Html.PasswordFor(x => x.NewPassword2, new { required = "required", @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">@Html.Loc("Submit")</button>
        </div>
    </form>

    <p>@Html.Loc("Description2")</p>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}