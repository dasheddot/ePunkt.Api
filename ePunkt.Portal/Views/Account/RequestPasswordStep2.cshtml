@model ePunkt.Portal.Models.Account.RequestPasswordStep2ViewModel
<div class="requestPasswordStep2Page">
    @Html.TranslatedValidationSummary()

    <h1>@Html.Loc("Title")</h1>
    <p>@Html.Loc("Description1")</p>

    <form method="POST" action="@Url.Action("RequestPasswordStep2", new { code = Model.Code, email = Model.Email })" role="form" class="form-horizontal">
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(x => x.NewPassword, Html.Loc("NewPassword").ToString(), new { @class = "control-label col-xs-2" })
            @Html.PasswordFor(x => x.NewPassword, new { required = "required", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NewPassword2, Html.Loc("RepeatPassword").ToString(), new { @class = "control-label col-xs-2" })
            @Html.PasswordFor(x => x.NewPassword2, new { required = "required", @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">@Html.Loc("Submit")</button>
        </div>
    </form>

    <p>@Html.Loc("Description2")</p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}