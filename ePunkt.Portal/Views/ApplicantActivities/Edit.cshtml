@model ePunkt.Portal.Models.ApplicantActivities.EditViewModel

@Html.TranslatedValidationSummary()

@using (Html.BeginForm())
{   
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(x => x.Id)

    <fieldset>
        <legend></legend>

        <div class="editor-row">
            @Html.LabelFor(m => m.Name, Html.Loc("Name").ToString())
            @Html.TextBoxFor(m => m.Name)
        </div>

        <div class="editor-row">
            @Html.LabelFor(m => m.StartYear, Html.Loc("Start").ToString())
            @Html.DropDownListFor(m => m.StartDay, Model.AvailableDays)
            @Html.DropDownListFor(m => m.StartMonth, Model.AvailableMonths)
            @Html.DropDownListFor(m => m.StartYear, Model.AvailableYears)
        </div>

        <div class="editor-row">
            @Html.LabelFor(m => m.EndYear, Html.Loc("End").ToString())
            @Html.DropDownListFor(m => m.EndDay, Model.AvailableDays)
            @Html.DropDownListFor(m => m.EndMonth, Model.AvailableMonths)
            @Html.DropDownListFor(m => m.EndYear, Model.AvailableYears)
        </div>

        <p>
            <input type="submit" value="@Html.Loc("Save")" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Html.Loc("Back").ToString(), "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
