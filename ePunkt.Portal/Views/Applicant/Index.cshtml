@model ePunkt.Portal.Models.Applicant.IndexViewModel

<h1>@Html.Loc("Title")</h1>
<p>@Html.Loc("Description")</p>

<div id="applicantCompleteness">
    <p class="@(Model.Completeness.PersonalInformation >= 100 ? "complete" : "incomplete")">
        @Html.ActionLink(Html.Loc("PersonalInformation").ToString(), "Index", "ApplicantPersonalInformation")
        <span>@Html.Loc("Placeholder_Percent_Complete", Model.Completeness.PersonalInformation)</span>
    </p>
    <p class="@(Model.Completeness.Files >= 100 ? "complete" : "incomplete")">
        @Html.ActionLink(Html.Loc("Files").ToString(), "Index", "ApplicantFiles")
        <span>@Html.Loc("Placeholder_Percent_Complete", Model.Completeness.Files)</span>
    </p>
    <p class="@(Model.Completeness.JobProfiles >= 100 ? "complete" : "incomplete")">
        @Html.ActionLink(Html.Loc("JobProfiles").ToString(), "Index", "ApplicantJobProfiles")
        <span>@Html.Loc("Placeholder_Percent_Complete", Model.Completeness.JobProfiles)</span>
    </p>
    <p class="@(Model.Completeness.Activities >= 100 ? "complete" : "incomplete")">
        @Html.ActionLink(Html.Loc("Activities").ToString(), "Index", "ApplicantActivities")
        <span>@Html.Loc("Placeholder_Percent_Complete", Model.Completeness.Activities)</span>
    </p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="applicantAdditionalSettings">
        <p>
            @Html.CheckBox("active", Model.ApplicantResponse.IsActive)@Html.Label("active", Html.Loc("Active_Label").ToString())
            <span>@Html.Loc("Active_Description")</span>
        </p>
        <p>
            @Html.CheckBox("matchingJobs", Model.ApplicantResponse.EnableMatchingJobsAutoMail)@Html.Label("matchingJobs", Html.Loc("MatchingJobs_Label").ToString())
            <span>@Html.Loc("MatchingJobs_Description")</span>
        </p>
        <p>
            @Html.CheckBox("newsletter", Model.ApplicantResponse.EnableNewsletter)@Html.Label("newsletter", Html.Loc("Newsletter_Label").ToString())
            <span>@Html.Loc("Newsletter_Description")</span>
        </p>
        <input type="submit" value="@Html.Loc("Save")" />
    </div>
}
