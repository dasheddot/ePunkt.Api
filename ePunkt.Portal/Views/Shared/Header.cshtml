@using (Html.SwitchLocSource("~/Views/Shared/Header.cshtml"))
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(@Html.Loc("Profile_Link").ToString(), "Index", "Applicant")</li>
                        <li>@Html.ActionLink(@Html.Loc("Applications_Link").ToString(), "Index", "Applications")</li>
                        <li>@Html.ActionLink(@Html.Loc("Jobs_Link").ToString(), "Index", "Jobs")</li>
                    </ul>

                    <ul class="nav navbar-nav pull-right">

                        <li>@Html.ActionLink(@Html.Loc("ChangePassword_Link").ToString(), "ChangePassword", "Account")</li>
                        <li>@Html.ActionLink(@Html.Loc("ThirdPartyProfiles_Link").ToString(), "Index", "ThirdPartyProfile")</li>
                        <li>@Html.ActionLink(@Html.Loc("Logoff_Link").ToString(), "Logoff", "Account")</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(@Html.Loc("Jobs_Link").ToString(), "Index", "Jobs")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink(@Html.Loc("Login_Link").ToString(), "Login", "Account")</li>
                    </ul>
                }

            </div>
        </div>
    </div>
}


